{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "lib",
		"strict": true,
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
